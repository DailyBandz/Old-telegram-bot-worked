def button(update: Update, context: CallbackContext) -> None:
    """Handle button press."""
    query = update.callback_query

    if query.data == 'not_received':
        keyboard = [[{'text': 'Check againğŸ¤¦ğŸ¾â€â™‚ï¸', 'callback_data': 'check_again'}, {'text': 'Please send a ScreenshotğŸ“¸', 'callback_data': 'send_screenshot'}]]
        reply_markup = {'inline_keyboard': keyboard}
        query.edit_message_text(text='Please send a ScreenshotğŸ“¸', reply_markup=reply_markup)
    elif query.data == 'check_again':
        keyboard = [[{'text': 'Received âœ…', 'callback_data': 'received'}, {'text': 'Not Received âŒ', 'callback_data': 'not_received'}]]
        reply_markup = {'inline_keyboard': keyboard}
        query.edit_message_text(text='Did you receive the payment?', reply_markup=reply_markup)
